@using mn.Models
@model Danhsach

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Xóa trường</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="University" class="p-0"></label>
			<input asp-for="University" disabled class="form-control" />


		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Xóa</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Danhsach" asp-action="Index" class="btn btn-outline-secondary form-control">
					Trở về
				</a>
			</div>
		</div>
	</div>
</form>