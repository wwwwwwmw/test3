@using mn.Models
@model Danhsach

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Chỉnh sửa</h2>
			<hr />
		</div>
		@* <div asp-validation-summary="All"></div> *@
		<div class="mb-3 row p-1">
			<label asp-for="University" class="p-0"></label>
			<input asp-for="University" type="text" class="form-control" />
			<span asp-validation-for="University" class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Cập nhật</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Danhsach" asp-action="Index" class="btn btn-outline-secondary form-control">
					Trở về
				</a>
			</div>
		</div>
	</div>
</form>