@using mn.Models
@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Tạo Sinh Viên</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PhoneNumber" class="p-0"></label>
            <input asp-for="PhoneNumber" type="text" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="UniversityId" class="control-label"></label>
            <select asp-for="UniversityId" class="form-control" id="cityDropdown">
                <option value="">Select University</option>
                @if (ViewBag.DanhsachList != null)
                {
                    foreach (var danhsach in ViewBag.DanhsachList)
                    {
                        <option value="@danhsach.Value">@danhsach.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="UniversityId" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Tạo</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Trở về
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#cityDropdown').select2({
                placeholder: '-- Select School --',
                allowClear: true
            });
        });
    </script>
}